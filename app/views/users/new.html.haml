= form_for @user, url: sign_up_path do |f|
  - if @user.errors.any?
    #error_explanation.alert.alert-danger
      %ul
        - @user.errors.full_messages.each do |message|
          %li= message

  = f.label :name
  = f.text_field :name

  = f.label :mail
  = f.text_field :mail

  = f.label :password
  = f.text_field :password

  = f.label :password_confirmation
  = f.text_field :password_confirmation

  = f.submit '登録'